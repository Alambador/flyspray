<?xml version="1.0"?>
<schema version="0.3">
  <table name="field_values">
    <field name="record_id" type="I" size="11">
      <KEY/>
      <AUTOINCREMENT/>
    </field>
    <field name="field_id" type="I" size="11">
      <NOTNULL/>
    </field>
    <field name="task_id" type="I" size="11">
      <NOTNULL/>
    </field>
    <field name="field_value" type="X">
      <NOTNULL/>
    </field>
    <index name="field_values_unique">
      <UNIQUE/>
      <col>field_id</col>
      <col>task_id</col>
    </index>
    <index name="field_values_task">
      <col>task_id</col>
    </index>
    <index name="field_values_field">
      <col>field_id</col>
    </index>
  </table>
  <table name="fields">
    <field name="field_id" type="I" size="11">
      <KEY/>
      <AUTOINCREMENT/>
    </field>
    <field name="field_name" type="C" size="50">
      <NOTNULL/>
    </field>
    <field name="field_type" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="1"/>
    </field>
    <field name="version_tense" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <field name="default_value" type="X"/>
    <field name="force_default" type="I" size="1">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <field name="list_id" type="I" size="11"/>
    <field name="project_id" type="I" size="11">
      <NOTNULL/>
      <DEFAULT value="0"/>
    </field>
    <index name="fields_project">
      <col>project_id</col>
    </index>
    <index name="fields_listid">
      <col>list_id</col>
    </index>
    <index name="fields_type">
      <col>field_type</col>
    </index>
  </table>
</schema>